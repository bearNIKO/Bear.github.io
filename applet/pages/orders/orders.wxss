  white-space: nowrap;
}
.user_position .user_position_info .user_position_info_item .info .users .phone {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #888;
  display: inline-block;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user_position .user_position_info .user_position_info_item .info .position {
  font-size: 24rpx;
}
.user_position .user_position_info .user_position_info_item .info .position .moren {
  display: inline-block;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  color: #fc4d52;
  background: #FFF3F3;
  margin-right: 20rpx;
}
.user_position .user_position_info .user_position_info_item .deit {
  width: 80rpx;
  height: 50rpx;
  font-size: 24rpx;
  text-align: right;
  line-height: 50rpx;
  border-left: 4rpx solid #EEE;
  color: #888;
  margin-left: 10rpx;
} 


