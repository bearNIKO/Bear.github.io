/* pages/my/collection/collection.wxss */
@import '../../../template/goodsHistory/goodsHistory.wxss';
@import '../../../template/goodsRecommend/goodsRecommend.wxss';
.container {
  position: fixed;
  width: 100%;
  height: 100vh;
}

.container .print_head {
  position: relative;
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: linear-gradient(to left,#FE3C35 0,#FF1F4C 100%);
  font-size: 32rpx;
  color: #fff;
}
.container .print_head .print_head_delete {
  position: absolute;
  right: 0;
  top: 0;
  height: 90rpx;
  width: 90rpx;
  font-size: 40rpx;
  vertical-align: middle;
}

.container .print_list {
  position: absolute;
  top: 90rpx;
  bottom: 0;
}
.container .print_list .print_list_muban {
  padding-top: 20rpx;
  width: 100%;
}
.container .print_list .print_list_muban .print_list_muban_item {
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 4rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .img {
  width: 250rpx;
  height: 250rpx;
  background: #F5F5F5;
  margin-right: 30rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .box {
  flex: 1;
  height: 250rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .box .title {
  width: 100%;
  height: 40rpx;
  background: #F5F5F5;
  margin-bottom: 20rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .box .price {
  width: 50%;
  height: 40rpx;
  background: #F5F5F5;
  margin-bottom: 40rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .box .juan {
  width: 30%;
  height: 40rpx;
  background: #F5F5F5;
  margin-bottom: 20rpx;
}
.container .print_list .print_list_muban .print_list_muban_item .box .comment {
  width: 60%;
  height: 30rpx;
  background: #F5F5F5;
}

.container .print_list .print_list_null {
  padding: 20rpx;
  text-align: center;
  color: #555;
  font-size: 30rpx;
  background: #EEE;
  height: 600rpx;
}
.container .print_list .print_list_null .img {
  width: 375rpx;
  height: 375rpx;
  margin-right: 0 auto;
}
.container .print_list .print_list_null .button {
  width: 260rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  border-radius: 40rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background: linear-gradient(to left,#FBAA58 0,#FA4DBE 100%);
}




.container .back_top {
  position: fixed;
  z-index: 10;
  bottom: -200rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  border-radius: 50%;
  transition: all .5s ease;
}
.container .back_top.back_top_show {
  bottom: 100rpx;
}


::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}