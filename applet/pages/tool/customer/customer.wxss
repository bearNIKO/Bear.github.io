/* pages/tool/customer/customer.wxss */
.container {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: #F5F5F5;
}
.container .head {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ddd;
}


.container .nav {
  width: 100%;
  height: 240rpx;
  background: #fff;
}
.container .nav .exclusive_serve {
  display: flex;
  height: 240rpx;
  padding: 0 48rpx;
  justify-content: space-between;
  align-items: center;
}
.container .nav .exclusive_serve .img {
  width: 180rpx;
  height: 180rpx;
  text-align: right;
}
.container .nav .exclusive_serve .text {
  font-family: PingFangSC-Medium;
  color: #4a4a4a;
}
.container .nav .exclusive_serve .text .text_title{
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
  margin-bottom: 8rpx;
}
.container .nav .exclusive_serve .text .text_desc {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #929292;
}


.container .section {
  margin-top: 20rpx;
  background: #fff;
}
.container .section .section_item {
  display: flex;
  margin: 0 24rpx;
  padding-left: 10rpx;
  height: 175rpx;
  align-items: center;
}
.container .section .section_item .img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}
.container .section .section_item .info_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #4a4a4a;
  line-height: 42rpx;
}
.container .section .section_item .info_num {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #9b9b9b;
  line-height: 40rpx;
}
.container .section .section_item .copy_text {
  display: inline-block;
  padding: 0 20rpx;
  height: 42rpx;
  background: linear-gradient(270deg,rgba(249,100,43,.1) 0,rgba(255,52,52,.1) 100%);
  border-radius: 100rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #fe3a33;
  line-height: 42rpx;
  margin-left: 20rpx;
}
.container .section .section_border {
  height: 2rpx;
  margin: 0 24rpx;
  background-color: #eee;
}


.container .footer {
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #9b9b9b;
  margin: 0 24rpx;
  margin-top: 60rpx;
  font-size: 24rpx;
}