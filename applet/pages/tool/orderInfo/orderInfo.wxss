/* pages/tool/orderInfo/orderInfo.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: #F5F5F5;
  overflow-y: scroll;
}
.container .head{
  position: fixed;
  z-index: 100;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1px solid #ddd;
  color: #333;
  font-size: 40rpx;
}
.container .search {
  position: relative;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 360rpx;
  background: #fff;
}
.container .search .icon {
  position: absolute;
  top: 40rpx;
  left: 41%;
  height: 144rpx;
  width: 144rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 144rpx;
  color: #fff;
  border-radius: 50%;
  background: linear-gradient(133deg,#f9642b,rgba(255,52,52,.99));
}
.container .search .icon text {
  font-size: 90rpx;
}
.container .search .search_box {
  position: absolute;
  bottom: 50rpx;
  height: 72rpx;
}
.container .search .search_box input {
  display: inline-block;
  height: 72rpx;
  width: 570rpx;
  border: 1px solid #ccc;
  border-right: 0;
  font-size: 30rpx;
  padding-left: 10rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #4a4a4a;
  line-height: 72rpx;
  vertical-align: middle;
}
.container .search .search_box .text {
  display: inline-block;
  width: 120rpx;
  height: 76rpx;
  border: none;
  background: linear-gradient(133deg,#f9642b,rgba(255,52,52,.99));
  font-size: 30rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #fff;
  line-height: 72rpx;
  border-radius: 5%;
}

.container .section {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
}
.container .section .title {
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333;
  line-height: 26rpx;
  border-bottom: 1px solid #F2F2F2;
  padding-bottom: 20rpx;
  margin: 0 16rpx;
}
.container .section .step {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #666;
  line-height: 34rpx;
  margin: 18rpx 0;
  position: relative;
  z-index: 1;
  zoom: 1;
  left: 14rpx;
}
.container .section .rule_img {
  width: 444rpx;
  height: 320rpx;
  margin-left: 36rpx;
  border: 0;
  vertical-align: middle;
}


.container .rule_msg {
  padding: 0 36rpx;
  margin-bottom: 36rpx;
}
.container .rule_msg .title {
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333;
  line-height: 36rpx;
  margin-bottom: 12rpx;
}
.container .rule_msg .msg {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #666;
  line-height: 34rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}