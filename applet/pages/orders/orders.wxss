.container .bottom_box {
  height: 200rpx;
}

.container .back_top {
  position: fixed;
  z-index: 100;
  bottom: -100rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  border-radius: 50%;
  transition: all .5s ease;
}
.container .back_top.back_top_show {
  bottom: 150rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}