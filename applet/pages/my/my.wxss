/* pages/my/my.wxss */
.container {
  position: fixed;
  width: 100%;
  height: 100vh;
  background-color: #F6F6F6;
}

.container .head_bg {
  position: absolute;
  width: 100%;
  height: 400rpx;
}

.container .head {
  position: absolute;
  width: 100%;
  z-index: 100;
}
.container .head .user {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 50rpx;
  height: 160rpx;
}
.container .head .user .user_info {
  float: left;
  height: 160rpx;
  width: 500rpx;
  overflow: hidden;
  color: #fff;
  font-size: 40rpx;
}
.container .head .user .user_info .user_login {
  margin-left: 40rpx;
  display: inline-block;
  vertical-align:middle;
}
.container .head .user .user_info .user_name {
  vertical-align:middle;
  margin-left: 40rpx;
}
.container .head .user .user_info .user_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  vertical-align:middle
}
.container .head .user .user_set {
  float: right;
  display: block;
  width: 55rpx;
  height: 55rpx;
}

.container .head .nav {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 60rpx;
  height: 240rpx;
  border-radius: 20rpx;
  background: #fff;
}
.container .head .nav .item {
  width: 33.33%;
  float: left;
  height: 240rpx;
  text-align: center;
  /* background: red; */
}
.container .head .nav .item .item_img {
  width: 100rpx;
  height: 100rpx;
  margin-top: 35rpx;
}
.container .head .nav .item .item_text {
  font-size: 30rpx;
  color: #666;
  font-weight: 300;
}

.container .head .card {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 30rpx;
  height: 300rpx;
  border-radius: 20rpx;
  background: #fff;
}
.container .head .card .title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.container .head .card .cards {
  width: 100%;
  height: 200rpx;
}
.container .head .card .cards .cards_item {
  float: left;
  width: 160rpx;
  height: 200rpx;
  margin-left: 6rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: 300;
}
.container .head .card .cards .cards_item:active {
  background: rgba(255,255,255,.6);
}
.container .head .card .cards .cards_img {
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
}