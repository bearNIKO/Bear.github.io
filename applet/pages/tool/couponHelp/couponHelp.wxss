/* pages/tool/couponHelp/couponHelp.wxss */
.container {
  width: 100%;
  height: 100vh;
}
.container .head {
  position: fixed;
  z-index: 100;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(270deg,#fe3c35 0,#ff1f4c 100%);
  text-align: center;
}
.container .head .head_title {
  height: 100rpx;
  width: 150rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
}

.container .banner {
  position: absolute;
  top: 100rpx;
  width: 100%;
}
.container .banner .img {
  width: 100%;
  height: 840rpx;
  vertical-align: top;
}

.container .back_top {
  position: fixed;
  z-index: 100;
  bottom: -100rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  border-radius: 50%;
  transition: all .5s ease;
}
.container .back_top.back_top_show {
  bottom: 60rpx;
}