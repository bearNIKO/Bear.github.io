/* pages/goodsInfo/goodsInfo.wxss */
@import '../../template/showListLinkModal/showListLinkModal.wxss';

.container {
  width: 100%;
  height: 100vh;
}

.container .head {
  position: fixed;
  top: 0;
  z-index: 100;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.container .head .head_title {
  font-family: Simhei;
}
.container .head .head_title .item {
  display: inline-block;
  width: 200rpx;
  height: 100rpx;
  font-size: 34rpx;
  color: #666;
  text-align: center;
  line-height: 100rpx;
}
.container .head .head_title .item text.active {
  display: inline-block;
  height: 100rpx;
  border-bottom: 6rpx solid #FC3F78;
  box-sizing: border-box;
}
.container .head .head_option {
  position: absolute;
  right: 30rpx;
  font-size: 50rpx;
  color: #333;
}
.container .head_box {
  width: 100%;
  height: 100rpx;
}
.container .swipers {
  position: relative;
  width: 100%;
  height: 650rpx;
}
.container .swipers .items {
  width: 100%;
  height: 650rpx;
}
.container .swipers .items .item .img{
  width: 100%;
  height: 650rpx;
}
.container .swipers .index {
  position: absolute;
  z-index: 10;
  width: 80rpx;
  height: 40rpx;
  font-size: 24rpx;
  background: rgba(0,0,0,.42);
  color:  #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  bottom: 20rpx;
  right: 20rpx;
}


.container .goods_info {
  width: 100%;
}
.container .goods_info .title_top_info {
  padding-top: 30rpx;
  margin: 0 30rpx;
}
.container .goods_info .title_top_info .goods_price {
  display: inline-block;
  font-size: 26rpx;
  color: #FC4D52;
}
.container .goods_info .title_top_info .goods_price .after_volume_price {
  font-size: 40rpx;
}
.container .goods_info .title_top_info .goods_price .after_volume_price text {
  font-size: 30rpx;
}
.container .goods_info .title_top_info .goods_price .original_price {
  color: #888;
}
.container .goods_info .title_top_info .goods_price .original_price text {
  display: inline-block;
  margin-left: 10rpx;
  font-style: normal;
  text-decoration: line-through;
}
.container .goods_info .title_top_info .share {
  float: right;
  background: rgba(252,77,82,.1);
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fc4d52;
  line-height: 34rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-weight: 400;
  height: 34rpx;
}
.container .goods_info .title {
  margin: 20rpx 30rpx;
  height: 35rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.container .goods_info .title .img {
  display: inline-block;
  width: 54rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.container .goods_info .title .tm{
  margin-right: 10rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  vertical-align: middle;
}
.container .goods_info .service_sell_amount {
  height: 56rpx;
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  align-items: center;
  justify-content: center;
}
.container .goods_info .service_sell_amount .normal_span {
  flex: 2;
  color: #888;
  font-size: 26rpx;
}
.container .goods_info .service_sell_amount .normal_span .img {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.container .goods_info .service_sell_amount .normal_span .by {
  display: inline-block;
  margin-right: 20rpx;
}
.container .goods_info .service_sell_amount .text_right {
  float: 1;
  color: #888;
  font-size: 24rpx;
}
.container .goods_info .service_sell_amount .text_right .col_red {
  color: red;
}

.container .goods_info .coupon {
  position: relative;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.container .goods_info .coupon .img {
  width: 100%;
  height: 140rpx;
}
.container .goods_info .coupon .left {
  position: absolute;
  display: inline-block;
  left: 0;
  margin-left: 40rpx;
  margin-top: 30rpx;
  flex: 2;
}
.container .goods_info .coupon .left .title {
  margin: 0;
  font-weight: 600;
  font-size: 28rpx;
  height: 40rpx;
  color: #fff;
  margin-bottom: 6rpx;
}
.container .goods_info .coupon .left .title text {
  font-size: 40rpx;
  font-style: normal;
  vertical-align: center;
}
.container .goods_info .coupon .left .time {
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: rgba(255,255,255,.8);
  font-size: 20rpx;
}
.container .goods_info .coupon .right {
  position: absolute;
  display: inline-block;
  height: 140rpx;
  right: 0;
  line-height: 140rpx;
  width: 240rpx;
  text-align: center;
  font-size: 26rpx;
  color: #FE3738;
}

.container .goods_info .goods_desc{
  font-size: 26rpx;
  line-height: 34rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 40rpx;
  color: #888;
}
.container .goods_info .hr {
  width: 100%;
  height: 14rpx;
  background: #F5F5F5;
}
.container .goods_info .comment {
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.container .goods_info .comment .left {
  float: left;
  font-size: 28rpx;
}
.container .goods_info .comment .right {
  float: right;
  font-size: 28rpx;
  color: red;
  vertical-align: middle;
}
.container .goods_info .comment .right text {
  font-size: 30rpx;
}

.container .goods_info .goods_reco {
  width: 100%;
}
.container .goods_info .goods_reco .title {
  position: relative;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.container .goods_info .goods_reco .title .goods_reco_span1 {
  position: absolute;
  width: 90rpx;
  height: 4rpx;
  background-color: #e4e4e4;
  position: absolute;
  top: 50%;
  left: 25%;
}
.container .goods_info .goods_reco .title .goods_reco_span2 {
  position: absolute;
  width: 90rpx;
  height: 4rpx;
  background-color: #e4e4e4;
  position: absolute;
  top: 50%;
  right: 25%;
}

.container .goods_info .goods_reco .imglist {
  width: 100%;
}
.container .goods_info .goods_reco .imglist .img {
  width: 100%;
}

.container .bottom_box {
  width: 100%;
  height: 100rpx;
}


.container .back_top {
  position: fixed;
  z-index: 0;
  bottom: -200rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  border-radius: 50%;
  transition: all .5s ease;
}
.container .back_top.back_top_show {
  bottom: 180rpx;
}
.red {
  color: #fe3c35;
}


/* 购物车 */
.shop_cart {
  width: 100%;
}
.shop_cart .shop_cart_title {
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.shop_cart .shop_cart_title .img {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
}
.shop_cart .shop_cart_title .goods_info {
  display: inline-block;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 200rpx;
  overflow: hidden;
}
.shop_cart .shop_cart_title .goods_info .goods_info_price {
  width: 200rpx;
  height: 40rpx;
  font-size: 28rpx;
  margin-top: 40rpx;
  color: red;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.shop_cart .shop_cart_title .goods_info .goods_info_price text {
  font-size: 35rpx;
}
.shop_cart .shop_cart_title .goods_info .goods_info_kc {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  width: 200rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.shop_cart .shop_cart_title .goods_info .goods_info_type {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  width: 400rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}


.shop_cart {
  position: relative;
  height: 90%;
}
.shop_cart .shop_cart_type {
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.shop_cart .shop_cart_type .shop_cart_type_title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.shop_cart .shop_cart_type .shop_cart_type_items {
  width: 80%;
}
.shop_cart .shop_cart_type .shop_cart_type_items .item {
  display: inline-block;
  padding: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: black;
  background: #eee;
  border-radius: 10rpx;
  border: 2rpx solid  #eee;
  box-sizing: border-box;
}
.shop_cart .shop_cart_type .shop_cart_type_items .item.active {
  color: #fc4d52;
  background: rgba(252,77,82,.1);
  border: 2rpx solid #fc4d52;
}
.shop_cart .shop_cart_num {
  margin: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.shop_cart .shop_cart_num .shop_cart_num_name {
  display: inline-block;
}
.shop_cart .shop_cart_num .shop_cart_num_btn {
  float: right;
  height: 60rpx;
}
.shop_cart .shop_cart_num .shop_cart_num_btn view {
  float: left;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 40rpx;
  line-height: 60rpx;
  text-align: center;
  background: #F5F5F5;
  color: #888;
  margin-right: 5rpx;
}
.shop_cart .shop_cart_num .shop_cart_num_btn .num {
  font-size: 30rpx;
  color: #333;
  background: #eee;
}

.shop_cart .shop_cart_btn {
  position: fixed;
  bottom: 50rpx;
  left: 20rpx;
  right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(to left,#FE3C35 0,#FF1F4C 100%);
  border-radius: 20rpx;
  color: #fff;
}



::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}