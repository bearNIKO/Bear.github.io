/* template/goodsHistory/goodsHistory.wxss */
.print_list_items {
  width: 100%;
}
.print_list_items .print_list_item {
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  height: 250rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #F5F5F5;
}
.print_list_items .print_list_item .img {
  display: inline-block;
  width: 250rpx;
  height: 250rpx;
  margin-right: 20rpx;
  vertical-align: top;
}
.print_list_items .print_list_item .info {
  position: relative;
  display: inline-block;
  height: 250rpx;
  width: 440rpx;
}
.print_list_items .print_list_item .info  .title {
  height: 70rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.print_list_items .print_list_item .info .title .tm {
  width: 50rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.print_list_items .print_list_item .info .product_info {
  position: absolute;
  bottom: 0;
  display: inline-block;
  width: 420rpx;
  vertical-align: middle;
}
.print_list_items .print_list_item .info .product_info .price {
  font-weight: 400;
  font-size: 24rpx;
  color: #666;
}
  
.print_list_items .print_list_item .info .product_info .price .rmb {
  font-size: 24rpx;
  font-weight: 500;
  color: #FF2B22;
  margin-left: 2rpx;
}
.print_list_items .print_list_item .info .product_info .price .price_num {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF2B22;
}
.print_list_items .print_list_item .info .product_info .label_box {
  margin-right: 4rpx;
  font-size: 28rpx;
}
.print_list_items .print_list_item .info .product_info .label_box .juan {
  height: 28rpx;
  background: linear-gradient(90deg,#ff8873 0,#ff4f4f 100%);
  border-radius: 4rpx;
  padding: 0 10rpx 0 2rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #fff;
  line-height: 28rpx;
  display: inline-block;
  vertical-align: middle;
}
.print_list_items .print_list_item .info .product_info .label_box .icon {
    height: 28rpx;
    border-radius: 4rpx;
    border: 2rpx solid;
    font-size: 22rpx;
    font-weight: 400;
    color: #ff0137;
    padding-left: 10rpx;
    padding-right: 10rpx;
    margin-right: 10rpx;
    display: inline-block;
    line-height: 28rpx;
    vertical-align: middle;
    border-color: rgba(245,114,36,.7);
    color: #f57223;
}
.print_list_items .print_list_item .info .product_info .label_box .juan .text {
    background: #fff;
    border-radius: 2rpx 0 0 2rpx;
    font-size: 20rpx;
    margin-top: 1rpx;
    color: #FE3A33;
    width: 24rpx;
    height: 24rpx;
    display: inline-block;
    line-height: 26rpx;
    text-align: center;
}
.print_list_items .print_list_item .info .product_info .comment {
  font-size: 22rpx;
  font-weight: 400;
  color: #888;
}
.print_list_items .print_list_item .delete {
  display: inline-block;
  height: 250rpx;
  margin-left: 22rpx;
  background-color: #e64340;
  width: 170rpx;
  text-align: center;
  line-height: 250rpx;
  color: #fff;
  vertical-align: top;
}