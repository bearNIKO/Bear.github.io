/* pages/orders/orders.wxss */
page {  
  background: #EEE;
}  
.container {
  width: 100%;
  background: #EEE;
}
.container .userInfo {
  padding-top: 20rpx;
  width: 100%;
}
.container .userInfo .userInfo_box {
  position: relative;
  display: flex;
  height: 180rpx;
  margin: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
  align-items: center;
}
.container .userInfo .userInfo_box .userInfo_box_img {
  width: 62rpx;
  height: 62rpx;
  margin: 0 20rpx;
}
.container .userInfo .userInfo_box .userInfo_box_text {
  flex: 1;
  overflow: hidden;
}
.container .userInfo .userInfo_box .userInfo_box_text .userInfo_box_text_info {
  vertical-align: bottom;
}
.container .userInfo .userInfo_box .userInfo_box_text .userInfo_box_text_info .user_name {
  display: inline-block;
  font-size: 30rpx;
  max-width: 200rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .userInfo .userInfo_box .userInfo_box_text .userInfo_box_text_info .user_phone {
  display: inline-block;
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .userInfo .userInfo_box .userInfo_box_text .userInfo_box_text_psit {
  font-size: 30rpx;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .userInfo .userInfo_box .userInfo_box_icon {
  position: absolute;
  right: 20rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #ccc;
}
.container .userInfo .userInfo_box .userInfo_box_icon_box {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
  font-weight: 500;
  color: #ccc;
}

/* 商品信息 */
.container .goodsInfo {
  padding-top: 20rpx;
  width: 100%;
}
.container .goodsInfo .goodsInfo_box {
  margin: 0 20rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_title {
  display: flex;
  height: 84rpx;
  font-size: 28rpx;
  align-items: center;
  vertical-align: middle;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_title .goodsInfo_box_title_img {
  width: 54rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good {
  display: flex;
  margin-top: 10rpx;
  height: 190rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_img {
  width: 190rpx;
  height: 190rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_desce {
  flex: 1;
  height: 190rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_desce .goodsInfo_box_good_desce_info {
  display: inline-block;
  width: 300rpx;
  height: 190rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_desce .goodsInfo_box_good_desce_info .title {
  width: 300rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_desce .goodsInfo_box_good_desce_info .type {
  width: 300rpx;
  font-size: 25rpx;
  margin-top: 20rpx;
  height: 60rpx;
  color: #9c9c9c;
  padding-left: 10rpx;
  line-height: 60rpx;
  overflow: hidden;
  background: #eee;
  border-radius: 10rpx;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_price {
  width: 140rpx;
  height: 190rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_price .price_money {
  width: 140rpx;
  font-size: 26rpx;
  color: #333;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_good .goodsInfo_box_good_price .price_age {
  width: 140rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe {
  margin-top: 20rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe .goodsInfo_box_describe_item {
  display: flex;
  height: 84rpx;
  margin-left: 60rpx;
  align-items: center;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe .goodsInfo_box_describe_item .left {
  flex: 1;
  font-size: 24rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe .goodsInfo_box_describe_item .left text {
  color: #888;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe .goodsInfo_box_describe_item .right {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_describe .goodsInfo_box_describe_item .right text {
  font-weight: 500;
  font-size: 40rpx;
  margin-left: 20rpx;
  color: #888;
  vertical-align: middle;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_price {
  height: 90rpx;
  line-height: 90rpx;
  overflow: hidden;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_price .goodsInfo_box_price_money {
  float: right;
  display: flex;
  height: 90rpx;
  font-size: 24rpx;
  color: #333;
  align-items: center;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_price .goodsInfo_box_price_money .age {
  margin-right: 10rpx;
  color: #888;
  display: inline-block;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_price .goodsInfo_box_price_money .money {
  color: #ff5000;
  font-weight: 500;
  font-size: 26rpx;
  display: inline-block;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .goodsInfo .goodsInfo_box .goodsInfo_box_price .goodsInfo_box_price_money .rmb {
  color: #ff5000;
}


/* 用户地址 */
.user_position {
  width: 100%;
  height: 100vh;
  background: #EEE;
}
.user_position .user_position_head {
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.user_position .user_position_head .back {
  flex: 1;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
}
.user_position .user_position_head .text {
  flex: 2;
